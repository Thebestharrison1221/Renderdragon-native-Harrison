{
    "name": "renderdragon-assets",
    "version": "1.0.1",
    "description": "Asset search application for RenderDragon resources",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --enable-logging",
        "build": "electron-builder"
    },
    "keywords": [
        "electron",
        "assets",
        "renderdragon"
    ],
    "author": {
        "name": "Renderdragon",
        "email": "contact@renderdragon.org"
    },
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^26.7.0"
    },
    "build": {
        "appId": "com.renderdragon.assets",
        "productName": "RenderDragon Assets",
        "icon": "icon/icon.png",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist/**/*"
        ],
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities",
            "icon": "icon/icon.png"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ],
            "icon": "icon/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility",
            "icon": "icon/icon.png"
        }
    }
}